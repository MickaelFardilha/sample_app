<h1>Inscription</h1>

<%= form_for @user do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="field">
    <%= f.label :nom %><br />
    <%= f.text_field :nom %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label "Date de Naissance" %><br />
    <%= f.date_select :ddn,  start_year: 1901 %>
  </div>
  <div class="field">
    <%= f.label "Poids Actuel" %><br />
    <%= f.text_field :poidsActu %>
  </div>
  <div class="field">
    <%= f.label "Poids Ideal" %><br />
    <%= f.text_field :poidsIdeal %>
  </div>
  <div class="field">
    <%= f.label :taille %><br />
    <%= f.text_field :taille %>
  </div>
  <div class="field">
    <%= f.label "Pratiquez vous un sport ?" %>
    <%= f.label "Oui" %><%= f.radio_button :isSportif, 1%>
    <%= f.label "Non" %><%= f.radio_button :isSportif, 0, :checked => true %>
  </div>
  <div class="field">
    <%= f.label "Souhaitez pratiquer un sport ?" %>
    <%= f.label "Oui" %><%= f.radio_button :wantDoSport, 1 %>
    <%= f.label "Non" %><%= f.radio_button :wantDoSport, 0, :checked => true %>
  </div>
  <div class="field">
    <%= f.label "DÃ©posez votre CV : " %>
    <%= f.file_field :cv %>
  </div>
  <div class="actions">
    <%= f.submit "Inscription" %>
  </div>
<% end %>