<h1 class="entete">Inscription</h1>
<%= form_for @user do |f| %>
  <%= render 'shared/error_messages'%>
  <table class="center">
  <tr></tr>
  <tr>
    <td class="white"  width="315"></td>
    <td width="280"><b>&nbsp;&nbsp;Nom&nbsp;:</b></td>
    <td class="center" width="200"><%= f.text_field :nom %></td>
    <td  class="white"></td>
  </tr>
  <tr>
    <td class="white"  width="315"></td>
    <td><b>&nbsp;&nbsp;Email&nbsp;:</b></td>
    <td class="center"><%= f.text_field :email %></td>
  </tr>
  <tr>
    <td class="white"  width="315"></td>
    <td><b>&nbsp;&nbsp;Date de naissance&nbsp;:</b></td>
    <td class="center"><%= f.date_select :ddn,  start_year: 1901 %></td>
  </tr>
  <tr>
    <td class="white"  width="315"></td>
    <td><b>&nbsp;&nbsp;Poids actuel&nbsp;:</b></td>
    <td class="center"><%= f.text_field :poidsActu %></td>
  </tr>
  <tr>
    <td class="white"  width="315"></td>
    <td><b>&nbsp;&nbsp;Poids id√©al&nbsp;:</b></td>
    <td class="center"><%= f.text_field :poidsIdeal %></td>
  </tr>
  <tr>
    <td class="white"  width="315"></td>
    <td><b>&nbsp;&nbsp;Taille&nbsp;:</b></td>
    <td class="center"><%= f.text_field :taille %></td>
  </tr>
  <tr>
    <td class="white"  width="315"></td>
    <td><b>&nbsp;&nbsp;Pratiquez vous un sport ?  &nbsp;:</b></td>
    <td class="center"><%= f.label "Oui" %><%= f.radio_button :isSportif, 1, :onclick => "showWantDoSport('false')"%>
    <%= f.label "Non" %><%= f.radio_button :isSportif, 0, :checked => true, :onclick => "showWantDoSport('true')"%> </td>
  </tr>
  <tr>
    <td class="white"  width="315"></td>
    <td  id="wantDoSportTd"><b>&nbsp;&nbsp;Souhaitez vous pratiquer un sport ? &nbsp;:</b></td>
    <td class="center"><span id="wantDoSportSpan"><%= f.label "Oui" %><%= f.radio_button :wantDoSport, 1 %>
    <%= f.label "Non" %><%= f.radio_button :wantDoSport, 0, :checked => true %></span></td>
  </tr>
  <tr>
    <td class="white"  width="315"></td>
    <td><b>&nbsp;&nbsp;Votre CV &nbsp;:</b></td>
    <td class="center"><%= f.file_field :cv %></td>
  </tr>
  </table>
  <br/>
  <div>
    <td><%= f.submit "Inscription", :class => "submit_button"  %></td>
  </div>
<% end %>